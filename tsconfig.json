{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}